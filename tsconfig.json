{
  "compilerOptions": {
    "allowJs": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["es6", "dom", "es2017"],
    "target": "es5",
    "declaration": true,
    "declarationDir": "./dist",
    "emitDeclarationOnly": true,
    "resolveJsonModule": true
  },
  "include": ["index.ts", "src/**/*.ts"],
  "exclude": ["node_modules", "demo", "site", "dist", "**/*.test.ts"]
}
